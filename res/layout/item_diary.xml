<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="96dp"
    android:background="#EBF7FF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/item_txt_diary_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014.10.11.목 날씨  " />
            </FrameLayout>

            <TextView
                android:id="@+id/item_txt_diary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목                                                " />

            <TextView
                android:id="@+id/item_txt_diary_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용   " />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/item_img_diary_tag"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_margin="2dp" />

                    <TextView
                        android:id="@+id/item_txt_diary_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="태그   " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/item_img_diary_folder"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_margin="2dp" />

                    <TextView
                        android:id="@+id/item_txt_diary_folder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="폴더     " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/item_img_diary_location"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_margin="2dp" />

                    <TextView
                        android:id="@+id/item_txt_diary_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위치   " />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_img_diary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="#B5C1DB"
            android:src="@drawable/jazz" />
    </RelativeLayout>

</RelativeLayout>